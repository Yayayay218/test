www.{$DOMAIN_NAME} {
redir / https://en.yquizz.com{uri}

}

{$DOMAIN_NAME} {
redir / https://en.yquizz.com{uri}

}


en.{$DOMAIN_NAME} {
    proxy / node:3000 {
        header_upstream Host {host}
        header_upstream X-Real-IP {remote}
        header_upstream X-Forwarded-Proto {scheme}
    }

    rewrite {
        if {path} has _escaped_fragment_=
        to {path} {path}/ /
    }

    log stdout
    errors stdout
    gzip
}

